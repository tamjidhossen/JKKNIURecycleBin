        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_below="@id/phoneLabelTv"-->
        <!--            android:layout_alignParentEnd="true"-->
        <!--            android:layout_marginTop="10dp"-->
        <!--            android:text="dd/MM/yyyy"/>-->

        <TextView
            android:id="@+id/deptLabelTv"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/phoneLabelTv"
            android:layout_marginTop="10dp"
            android:text="Dept."/>

        <TextView
            android:id="@+id/deptTv"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/phoneLabelTv"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:text="e.g. CSE"/>

        <TextView
            android:id="@+id/sessionLabelTv"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/deptLabelTv"
            android:layout_marginTop="10dp"
            android:text="Session"/>

        <TextView
            android:id="@+id/sessionTv"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/deptLabelTv"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:text="e.g. 2020-21"/>

        <TextView
            android:id="@+id/verificationLabelTv"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sessionLabelTv"
            android:layout_marginTop="10dp"
            android:text="Account Status"/>
        <TextView
            android:id="@+id/verificationTv"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/sessionLabelTv"
            android:text="Not Verified"
            android:textColor="@color/Red"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/verificationLabelTv"
            android:layout_marginTop="20dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Preferences" />


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/editProfileCv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?selectableItemBackground"
                app:cardCornerRadius="10dp"
                app:contentPadding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_person_grey"
                    android:text="Edit Profile"
                    android:gravity="center_vertical"
                    android:drawablePadding="10dp"
                    android:drawableEnd="@drawable/ic_next_grey"/>

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/logoutCv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?selectableItemBackground"
                app:cardCornerRadius="10dp"
                app:contentPadding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawableStart="@drawable/ic_logout_grey"
                    android:drawableEnd="@drawable/ic_next_grey"
                    android:drawablePadding="10dp"
                    android:text="Logout" />
            </com.google.android.material.card.MaterialCardView>

            <!--MaterialCardView: Click to Verify Account-->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/verifyAccountCv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?selectableItemBackground"
                app:cardCornerRadius="10dp"
                app:contentPadding="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Verify Account"
                    android:drawableStart="@drawable/ic_verified_gray"
                    android:drawableEnd="@drawable/ic_next_grey"
                    android:gravity="center_vertical"
                    android:drawablePadding="10dp"/>
            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>


    </RelativeLayout>


</ScrollView>